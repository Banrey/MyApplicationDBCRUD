<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">

    <!--Edit text for getting course id-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idEdtEmpId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Employee Id"
                android:importantForAutofill="no"
                android:inputType="number" />

            <Button
                android:id="@+id/idBtnGetEmp"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:text="Get Employee Details"
                android:textAllCaps="false" />

            <androidx.cardview.widget.CardView
                android:id="@+id/idCVItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp">


                <!--Textview for displaying our Course Name-->
                <TextView
                    android:id="@+id/idTVEmpName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="CourseName"
                    android:textColor="@color/purple_500"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!--Textview for displaying our Course Duration-->
                <TextView
                    android:id="@+id/idTVGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Duration"
                    android:textColor="@color/black" />

                <!--Textview for displaying our Course Description-->
                <TextView
                    android:id="@+id/idTVCivilStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Description"
                    android:textColor="@color/black" />


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!--Button for adding your course to Firebase-->

</androidx.constraintlayout.widget.ConstraintLayout>
